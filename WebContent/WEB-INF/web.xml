<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Brains_servlet_jsp_tut</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>xmlServl</servlet-name>
		<servlet-class>ua.mycompany.roandlo173.XmlServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>xmlServl</servlet-name>
		<url-pattern>/xmlServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>InitJSP</servlet-name>
		<jsp-file>/initPage.jsp</jsp-file>
		<init-param>
			<param-name>defaultUser</param-name>
			<param-value>Default user name</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>InitJSP</servlet-name>
		<url-pattern>/initPage.jsp</url-pattern>
	</servlet-mapping>
</web-app>